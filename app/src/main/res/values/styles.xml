<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="myTheme" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@drawable/action_menu</item>
        <item name="android:actionMenuTextAppearance">@style/myTheme.ActionBar.MenuText</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionBarBackground</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.MenuText</item>
    </style>

    <style name="myTheme.ActionBar.MenuText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionBarText</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="myTheme.mainActivityTheme">
        <item name="android:actionBarStyle">@style/myTheme.ActionBar.mainActivity</item>
    </style>

    <style name="myTheme.ActionBar.mainActivity">
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

</resources>
